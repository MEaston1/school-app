<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                        

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/contentCard"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp" android:tag="layout/model_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
                android:id="@+id/mImageView"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:stroke_color="@color/darkDeepOrange"
                app:stroke_width="1dp" />

            <TextView
                android:id="@+id/mTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:padding="3dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="Title"
                android:textColor="@color/colorAccent"
                app:layout_constraintLeft_toRightOf="@+id/mImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mContentTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="2dp"
                android:padding="3dp"
                android:maxLines="2"
                android:maxLength="60"
                android:ellipsize="end"
                android:text="Content"
                app:layout_constraintBottom_toTopOf="@+id/likeLayout"
                app:layout_constraintLeft_toRightOf="@+id/mImageView"
                app:layout_constraintTop_toBottomOf="@id/mTitleTV" />

            <LinearLayout
                android:id="@+id/likeLayout"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginBottom="1dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/mViewsTV"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:layout_marginTop="1dp"
                    android:layout_height="match_parent"
                    android:text="0" />

                <ImageView
                    android:id="@+id/mViewsImg"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:src="@drawable/eye" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
         <!--end-->