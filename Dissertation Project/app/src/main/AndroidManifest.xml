<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.schoolapp">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/graduation_cap"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.ui.activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".registerlogin.RegisterActivity" />
        <activity
            android:name=".registerlogin.LoginActivity"
            android:label="MyFeaturesList" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".view.ui.activities.ListingActivity"
            android:label="Announcements"
            android:parentActivityName="MainActivity" />
        <activity
            android:name=".view.ui.activities.UploadActivity"
            android:theme="@style/CRUDTheme"
            android:label="Editor"
            android:parentActivityName="MainActivity" />
        <activity android:name=".messages.NewMessageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".messages.LatestMessagesActivity" />
        </activity>

        <activity android:name=".messages.ChatLogActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".messages.LatestMessagesActivity" />
        </activity>
        <activity
            android:name=".view.ui.activities.DetailActivity"
            android:label="News Reader "
            android:parentActivityName=".view.ui.activities.ListingActivity" />
        <activity android:name=".messages.LatestMessagesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
    </application>

</manifest>